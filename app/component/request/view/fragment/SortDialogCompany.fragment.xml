<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    >
    <ViewSettingsDialog
        id="SortCompanyDialog"
        confirm="onConfirmSortCompanyDialog"
        title="협력 업체 목록 정렬">
        <sortItems>
            <ViewSettingsItem text="업체 코드" key="ComNum" selected="true"/>
            <ViewSettingsItem text="업체 명" key="ComName"/>
            <ViewSettingsItem text="주소" key="ComAddress"/>
            <ViewSettingsItem text="담당자" key="ComPerson"/>
            <ViewSettingsItem text="담당자 연락처" key="ComContact"/>
            <ViewSettingsItem text="거래 품목" key="Good"/>
            <ViewSettingsItem text="업체 등록일" key="Date"/>
            <ViewSettingsItem text="신용 상태" key="Status"/>
        </sortItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>